{
  "compilerOptions": {
    "target": "es2021",                     // Transpile to es2021
    "module": "ESNext",                     // Use ES Modules
    "outDir": "./dist/scripts",             // Output compiled files into 'dist/scripts'
    "strict": true,                         // Enable strict type-checking
    "esModuleInterop": true,                // Enable interop with CommonJS modules
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "dom"],
    "moduleResolution": "bundler",
  },
  "include": ["src/**/*.ts"],                 // Include all TypeScript files
  "exclude": ["node_modules", "dist"]         // Exclude node_modules and dist directory
}
